<h4>Review</h4>
<form method="post" class="row g-3">
  <div asp-validation-summary="All"></div>

    <div class="col-md-12">
      <label asp-for="@Model.Rating" class="form-label">Rating</label>
      <input asp-for="@Model.Rating" id="rating-input" type="number" value="0" min="1" max="5" class="form-control" placeholder="Rating" id="inputRating"/>
      <div id="rating-stars-input">
        @* <div class="before-causing-problems-workaround"> *@
        <i data-star-number="1" class="bi star bi-star"></i>
        @* </div> *@
        @* star-# should be the first class in accorance with the js to speed up selection*@
        <i data-star-number="2" class="bi star bi-star"></i>
        <i data-star-number="3" class="bi star bi-star"></i>
        <i data-star-number="4" class="bi star bi-star"></i>
        <i data-star-number="5" class="bi star bi-star"></i>
        <span>(<span id="rating-show-number">#</span>)</span>
      </div>
      <div class="form-text">*Required</div>
    </div>

    <div class="col-12 form-floating">
        <label asp-for="@Model.Comment" class="form-label">Comment</label>
        <textarea asp-for="@Model.Comment" type="text" class="form-control" id="inputAddress" placeholder="Leave a comment here" style="height: 100px">
        </textarea>
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Leave Review</button>
    </div>
</form>

<hr />
<script type="text/javascript" src="~/review.js"></script>